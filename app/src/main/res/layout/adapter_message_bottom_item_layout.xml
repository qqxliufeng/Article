<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <ImageView
        android:id="@+id/mIvMessageBottomItemFace"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_glide_circle_load_default" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="落暮红尘"
        android:textColor="@color/blackTextColor"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@id/mIvMessageBottomItemFace"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="你好啊"
        android:textColor="@color/grayTextColor"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/mIvMessageBottomItemFace"
        app:layout_constraintLeft_toRightOf="@id/mIvMessageBottomItemFace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32分钟前"
        android:textColor="@color/grayTextColor"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/lineColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mIvMessageBottomItemFace" />


</androidx.constraintlayout.widget.ConstraintLayout>