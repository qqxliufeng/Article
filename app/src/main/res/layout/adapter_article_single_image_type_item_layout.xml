<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/select_article_item_bg"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="有一种心态叫放下，有一种境界叫舍得有一种境界叫舍得有一种境界叫舍得有一种境界叫舍得有一种境界叫舍得有一种境界叫舍得"
                android:textColor="@color/blackTextColor"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:text="心像口袋，什么都不装的叫心灵，装一点的叫心眼，装多了叫心计心像口袋，什么都不装的叫心灵，装一点的叫心眼，装多了叫心计心像口袋，什么都不装的叫心灵，装一点的叫心眼，装多了叫心计"
                android:textColor="@color/grayTextColor"
                android:ellipsize="end"
                android:maxLines="2"
                android:lineSpacingExtra="2dp"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_personal_index_top_bg" />

    </LinearLayout>

    <include layout="@layout/layout_article_item_bottom_layout" />

</LinearLayout>